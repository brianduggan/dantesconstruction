<!DOCTYPE html>
html(lang="en", ng-app="DantesApp")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(href="https://fonts.googleapis.com/css?family=Roboto:900")
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
    link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
    link(rel="stylesheet", href="/css/application.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.1/angular.js")
    script(src="/js/controllers/mainController.js")
    script(src="/js/main.js")
    title Dante's Construction

  body(ng-controller="mainController")
    header
      nav.nav.navbar-default.navbar-fixed-top
        .container-fluid
          .navbar-header
            a.navbar-brand() Dante's Construction
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li.active
                a(ng-click="navigate = 'Home'") Home
              li
                a(ng-click="navigate = 'About'") About
              li
                a(ng-click="navigate = 'Estimate'") Estimate
              li
                a(ng-click="navigate = 'Contact'") Contact


    .container.main-container
      #home(ng-if="navigate === 'Home'")
        h2 Dante's Construction
        h3 Perfection has no competition
        #dantes-carousel
          .indicator
            span {{indicator}}
          .controls
            span#prev(ng-click="prev()")
              i.fa.fa-arrow-circle-left(aria-hidden="true")
            span#next(ng-click="next()")
              i.fa.fa-arrow-circle-right(aria-hidden="true")
          .slide(ng-repeat="serv in ourServ" ng-show="$index === carousel")
            img(src="{{serv.src}}" alt="{{serv.alt}}")
            h4 {{serv.capHead}}
            p {{serv.capBody}}
            p {{$index}}

      #about(ng-if="navigate === 'About'")
        h2 About Dante's Construction

      #estimate(ng-if="navigate === 'Estimate'")
        h2 Get a free estimate!

      #contact(ng-if="navigate === 'Contact'")
        h2 Contact us at (401) 426-7042
        p or by using this form
        form
